<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="tw.sian.notes.mapper.ExpenseRecordMapper" >
    <resultMap id="ExpenseRecordMapperResultMap" type="tw.sian.notes.model.ExpenseRecord" >
        <id column="EXPENSE_ID" property="expenseId" jdbcType="NUMERIC" />
        <result column="MEMBER_ID" property="memberId" jdbcType="NUMERIC" />
        <result column="EXPENSE_ITEM" property="expenseItem" jdbcType="VARCHAR" />
        <result column="EXPENSE_AMOUNT" property="expenseAmount" jdbcType="NUMERIC" />
        <result column="EXPENSE_DATE" property="expenseDate" jdbcType="DATE" />
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
        <result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <select id="selectListByMemberId" resultMap="ExpenseRecordMapperResultMap">
        SELECT * FROM EXPENSE_RECORD
        WHERE MEMBER_ID = #{memberId}
    </select>

    <insert id="insert">
        <selectKey keyProperty="expenseId" resultType="BigInteger" order="BEFORE">
            SELECT EXPENSE_ID_SEQ.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO EXPENSE_RECORD(
            EXPENSE_ID,
            MEMBER_ID,
            EXPENSE_ITEM,
            EXPENSE_AMOUNT,
            EXPENSE_DATE,
            CREATE_TIME,
            UPDATE_TIME
        ) VALUES (
            #{expenseId},
            #{memberId},
            #{expenseItem},
            #{expenseAmount},
            #{expenseDate},
            #{createTime},
            #{updateTime}
        )
    </insert>

    <update id="update">
        UPDATE EXPENSE_RECORD
        SET EXPENSE_ITEM = #{expenseItem},
            EXPENSE_AMOUNT = #{expenseAmount},
            EXPENSE_DATE = #{expenseDate},
            UPDATE_TIME = #{updateTime}
        WHERE EXPENSE_ID = #{expenseId}
    </update>

    <delete id="deleteByExpenseId">
        DELETE FROM EXPENSE_RECORD
        WHERE EXPENSE_ID = #{expenseId}
    </delete>
</mapper>