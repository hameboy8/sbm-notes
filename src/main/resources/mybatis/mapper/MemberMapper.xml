<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="tw.sian.notes.mapper.MemberMapper" >
    <resultMap id="MemberMapperResultMap" type="tw.sian.notes.model.Member" >
        <id column="MEMBER_ID" property="memberId" jdbcType="NUMERIC" />
        <result column="MEMBER_ACCOUNT" property="memberAccount" jdbcType="VARCHAR" />
        <result column="MEMBER_PASSWORD" property="memberPassword" jdbcType="VARCHAR" />
        <result column="MEMBER_NAME" property="memberName" jdbcType="VARCHAR" />
        <result column="MEMBER_STATUS" property="memberStatus" jdbcType="VARCHAR" />
        <result column="CREATE_TIME" property="createTime" jdbcType="TIMESTAMP" />
        <result column="UPDATE_TIME" property="updateTime" jdbcType="TIMESTAMP" />
    </resultMap>

    <sql id="Base_Column_List" >
        MEMBER_ID,
        MEMBER_ACCOUNT,
        MEMBER_PASSWORD,
        MEMBER_NAME,
        MEMBER_STATUS,
        CREATE_TIME,
        UPDATE_TIME
    </sql>

    <select id="selectAll" resultMap="MemberMapperResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM MEMBER
    </select>

    <select id="selectOneByAccount" resultMap="MemberMapperResultMap">
        SELECT
        <include refid="Base_Column_List" />
        FROM MEMBER
        WHERE MEMBER_ACCOUNT = #{memberAccount}
    </select>

    <insert id="insert">
        <selectKey keyProperty="memberId" resultType="BigInteger" order="BEFORE">
            SELECT MEMBER_ID_SEQ.NEXTVAL FROM DUAL
        </selectKey>
        INSERT INTO MEMBER (
            MEMBER_ID,
            MEMBER_ACCOUNT,
            MEMBER_PASSWORD,
            MEMBER_NAME,
            MEMBER_STATUS,
            CREATE_TIME,
            UPDATE_TIME
        ) VALUES (
            #{memberId},
            #{memberAccount},
            #{memberPassword},
            #{memberName},
            #{memberStatus},
            #{createTime},
            #{updateTime}
        )
    </insert>

    <update id="update">
        UPDATE MEMBER
        SET MEMBER_PASSWORD = #{memberPassword},
            MEMBER_NAME = #{memberName},
            MEMBER_STATUS = #{memberStatus},
            UPDATE_TIME = #{updateTime}
        WHERE MEMBER_ID = #{memberId}
    </update>
    <update id="logicDelete">
        UPDATE MEMBER
        SET MEMBER_STATUS = 0,
            UPDATE_TIME = #{updateTime}
        WHERE MEMBER_ID = #{memberId}
    </update>
</mapper>
